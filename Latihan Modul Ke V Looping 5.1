#include <iostream>

using namespace std;
int array[100];

int masukan(int n) {
    int i;
    float r_rata, total=0;
    for(i=0; i < n; i++) {
        cout << "Masukkan bilangan ke " << i+1 << " : ";
        cin >> array[i];
        total = total + array[i];
    }
    r_rata = total/n;
    cout << "--------------------------------" << endl;
    cout << "Bilangan rata-ratanya adalah : " << r_rata << endl;
    return 0;
}

int hasil(int n) {
    int i, max, min;
    max = array[0];
    for(i=0; i < n; i++) {
        if(max < array[i]){
            max = array[i];
        } else if(min > array[i]) {
            min = array[i];
        }
    }
    cout << "Bilangan terbesarnya : " << max <<endl;
    cout << "Biangan terkecilnya : " << min <<endl;
    return 0;
}

int main() {
   int n=10;
   masukan (n);
   hasil (n);
}
