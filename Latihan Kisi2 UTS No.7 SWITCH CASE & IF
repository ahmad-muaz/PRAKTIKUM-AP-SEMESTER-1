#include <iostream>

using namespace std;

int main() {
    char a;
    int b;
    cout <<"Konversi bilangan bulat positif ke dalam angka Romawi : "<<endl;
    cout <<"Ketikkan angka : ";
    cin >> b;
    switch(b) {
        case 1 :
        b = 1;
        cout<<"I";
        break;
        case 2 :
        b = 2;
        cout<<"II";
        break;
        case 3 :
        b = 3;
        cout<<"III";
        break;
        case 4 :
        b = 4;
        cout<<"IV";
        break;
        case 5 :
        b = 5;
        cout<<"V";
        break;
        case 9 :
        b = 9;
        cout<<"IX";
        break;
        case 10 :
        b = 10;
        cout<<"X";
        break;
        case 20 :
        b = 20;
        cout<<"XX";
        break;
        case 30 :
        b = 30;
        cout<<"XXX";
        break;
        case 40 :
        b = 40;
        cout<<"XL";
        break;
        case 50 :
        b = 50;
        cout<<"L";
        break;
        case 90 :
        b = 90;
        cout<<"XC";
        break;
        case 100 :
        b = 100;
        cout<<"XC";
        break;
        case 200 :
        b = 200;
        cout<<"CC";
        break;
        case 300 :
        b = 300;
        cout<<"CCC";
        break;
        case 400 :
        b = 400;
        cout<<"CD";
        break;
        case 500 :
        b = 500;
        cout<<"D";
        break;
        case 900 :
        b = 900;
        cout<<"CM";
        break;
        case 1000 :
        b = 1000;
        cout<<"M";
        break;
        case 2000 :
        b = 2000;
        cout<<"MM";
        break;
        case 3000 :
        b = 3000;
        cout<<"MMM";
        break;
    }
    return 0;
}


#include<iostream>

using namespace std;

int main(){
    
    int x;
    a :
    cout<<endl;
    cout<<"Konversi bilangan positif ke Bilangan Romawi"<<endl;
    cout<<"Ketikkan angka : ";
    cin>>x;
    
    if (x>=3000){
        cout<<"MMM";
        x=x-3000;
    }
    if (x>=2000){
        cout<<"MM";
        x=x-2000;
    }
    if (x>=1000){
        cout<<"M";
        x=x-1000;
    }
    if (x>=900){
        cout<<"CM";
        x=x-900;
    }

    if(x>=500){
        cout<<"D";
        x=x-500;
    }
    if(x>=400){
        cout<<"CD";
        x=x-400;
    }
    if(x>=300){
        cout<<"CCC";
        x=x-300;
    }
    if(x>=200){
        cout<<"CC";
        x=x-200;
    }
    if(x>=100){
        cout<<"C";
        x=x-100;
    }
    if(x>=90){
        cout<<"XC";
        x=x-90;
    }
    if(x>=50){
        cout<<"L";
        x=x-50;
    }
    if(x>=40){
        cout<<"XL";
        x=x-40;
    }
    if(x>=30){
        cout<<"XXX";
        x=x-30;
    }
    if(x>=20){
        cout<<"XX";
        x=x-20;
    }
    if(x>=10){
        cout<<"X";
        x=x-10;
    }
    if(x>=9){
        cout<<"IX";
        x=x-9;
    }
    if(x>=5){
        cout<<"V";
        x=x-5;
    }
    if(x>=4){
        cout<<"IV";
        x=x-4;
    }
    if(x>=3){
        cout<<"III";
        x=x-3;
    }
    if(x>=2){
        cout<<"II";
        x=x-2;
    }
    if(x>=1){
        cout<<"I";
        x=x-1;
    }

    goto a;
}
